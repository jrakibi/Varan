{% extends 'base.html.twig' %}

{% block body %}
   <h1>{{ 'Certifications list'|trans }}</h1>

    <table>
        <thead>
            <tr>
                <th>{{ 'Id'|trans }}</th>
                <th>{{ 'Title'|trans }}</th>
                <th>{{ 'Occasion'|trans }}</th>
                <th>{{ 'Date'|trans }}</th>
                <th>{{ 'Actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for certification in certifications %}
            <tr>
                <td><a href="{{ path('certifications_show', { 'id': certification.id }) }}">{{ certification.id }}</a></td>
                <td>{{ certification.title }}</td>
                <td>{{ certification.occasion }}</td>
                <td>{% if certification.date %}{{ certification.date|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('certifications_show', { 'id': certification.id }) }}">{{ 'show'|trans }}</a>
                        </li>
                        <li>
                            <a href="{{ path('certifications_edit', { 'id': certification.id }) }}">{{ 'edit'|trans }}</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('certifications_new') }}">{{ 'Create a new certification'|trans }}</a>
        </li>
    </ul>
{% endblock %}
