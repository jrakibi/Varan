    <div class="tg-dashboardinvoices tg-appointmentdetails">
        <div class="tg-tablescroll">
            <div class="tg-dashboardbox tg-appointmentdetailbox">
                <div class="tg-dashboardboxtitle">
                    <h2>{{ 'Appointments Of'|trans }} <span>{{ date|date('l m Y') }}</span></h2>
                </div>
                <div class="tg-favoritlistingbox">
                    <div class="tg-invoicestitle">
                        <span style="width: 35%">{{ 'Title'|trans }}</span>
                        <span class="tg-titleamount" style="width: 20%">{{ 'Time'|trans }}</span>
                        <span class="tg-titleamount" style="width: 20%">{{ 'Etat'|trans }}</span>
                        <span class="tg-titleaction" style="width: 25%">{{ 'Action'|trans }}</span>
                    </div>
                    <ul class="tg-invoices">
                        {% for appointement in appointments %}
                            <li>
                                <div class="tg-invoicesheading" style="width: 35%">
                                    <h3><a href="#">{{ appointement.reason.reason }}</a></h3>
                                    <span>chez : {{ appointement.seance.calendrie.location.doctor.firstName }} {{ appointement.seance.calendrie.location.doctor.lastName }}</span>
                                </div>
                                <div class="tg-amout" style="width: 20%;">
                                    <em>{{ appointement.seance.heurDebut|date('H:i') }}</em>
                                </div>
                                <div class="tg-amout" style="width: 20%">
                                    <em>{{ appointement.etat|capitalize }}</em>
                                </div>
                                <div class="tg-btnaction" style="width: 25%;">
                                    <a class="tg-btndelete annuler" id="{{ appointement.id }}" type="today" {% if appointement.etat == 'annuler' %}style="background-color: #aeaeae" {% endif %}><i class="fa fa-minus"></i></a>
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>


